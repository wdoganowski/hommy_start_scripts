/var/log/hommy.forever.log
/var/log/hommy.out
/var/log/hommy.err
{
        rotate 30
        daily
        missingok
        notifempty
        compress
        delaycompress
        sharedscripts
        postrotate
                invoke-rc.d hommyd reload > /dev/null
        endscript
}

