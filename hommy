/var/log/hommy.log
{
        rotate 30
        daily
        missingok
        notifempty
        compress
        delaycompress
        sharedscripts
        postrotate
		cd /etc/init.d
                invoke-rc.d hommyd reload > /dev/null
        endscript
}

/var/log/nexo-proxy.log
{
        rotate 30
        daily
        missingok
        notifempty
        compress
        delaycompress
        sharedscripts
        postrotate
		cd /etc/init.d
                invoke-rc.d nexod reload > /dev/null
        endscript
}
