/var/log/nexo-proxy.out
/var/log/nexo-proxy.err
{
        rotate 30
        daily
        missingok
        notifempty
        compress
        delaycompress
        sharedscripts
        postrotate
                invoke-rc.d nexod reload > /dev/null
        endscript
}
